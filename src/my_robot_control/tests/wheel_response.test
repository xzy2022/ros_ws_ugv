<launch>
    <arg name="robot_name" default="smart" />

    <!-- Clean environment: Gazebo + controllers only -->
    <include file="$(find my_robot_control)/launch/gazebo_hardware_only.launch">
        <arg name="robot_name" value="$(arg robot_name)" />
    </include>

    <test test-name="test_wheel_response"
          pkg="my_robot_control"
          type="test_wheel_response.py"
          time-limit="120.0" />
</launch>
