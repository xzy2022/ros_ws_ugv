<launch>
    <arg name="robot_name" default="smart" />

    <rosparam command="load" file="$(find my_robot_bringup)/config/global_params.yaml" ns="$(arg robot_name)" />

    <node pkg="my_robot_control"
          type="ackermann_driver.py"
          name="ackermann_driver"
          output="screen"
          ns="$(arg robot_name)">
        <param name="cmd_vel_topic" value="cmd_vel" />
    </node>

    <test test-name="test_driver_logic"
          pkg="my_robot_control"
          type="test_driver_logic.py"
          time-limit="20.0" />
</launch>
